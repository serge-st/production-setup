{
	"compilerOptions": {
			"outDir": "./dist/",
			"noImplicitAny": true,
			"module": "ESNext",
			"target": "es6",
			"jsx": "react-jsx",
			"allowJs": true,
			"moduleResolution": "node",
			"esModuleInterop": true,
			"allowSyntheticDefaultImports": true,
			"baseUrl": ".",
			"paths": {
				"*": ["./src/*"]
			},
			"types": ["node", "jest", "@testing-library/jest-dom"],
			"resolveJsonModule": true,
	},
	"ts-node": {
	  "compilerOptions": {
		"module": "CommonJS"
	  }
	},
}